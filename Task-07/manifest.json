{
    "manifest_version": 3,
    "name": "Weather Guardian",
    "version": "1.0",
    "description": "A handy Chrome extension to check real-time weather for any location.",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "permissions": ["geolocation"]
  }
  